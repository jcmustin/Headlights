{
  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    ".prettierrc": "jsonc",
    ".eslintignore": "ignore"
  },

  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    "src/dist": true,
    "src/main.prod.js": true,
    "src/main.prod.js.map": true,
    "bower_components": true,
    "dll": true,
    "release": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "yarn.lock": true,
    "*.{css,sass,scss}.d.ts": true
  },
  "workbench.colorCustomizations": {
    "sash.hoverBorder": "#00aaaa",
    "statusBar.background": "#007777",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#00aaaa",
    "statusBarItem.remoteBackground": "#007777",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "tab.activeBorder": "#00aaaa",
    "titleBar.activeBackground": "#007777",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#00777799",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#077",
  "editor.formatOnSave": true
}
